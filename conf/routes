# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


# An example controller showing a sample home page
GET     /                               controllers.HomeController.index

# graphql uris
OPTIONS /graphql                        controllers.GraphQLController.options
GET     /graphql                        controllers.GraphQLController.gql(query: String, variables: Option[String] ?= None, operation: Option[String] ?= None)
POST    /graphql                        controllers.GraphQLController.gqlBody()

GET     /graphql/schema                 controllers.GQLSchemaController.renderSchema
GET     /graphql/browser                controllers.GQLSchemaController.renderClient

# we can do fancier things like custom routes like here
# https://github.com/playframework/play-scala-rest-api-example/tree/2.6.x
# ->      /api/v4/meta                    controllers.api.v4.MetaRouter

GET     /rest/v4/meta/info               controllers.api.v4.MetaController.meta
GET     /rest/v4/meta/health             controllers.api.v4.MetaController.healthcheck

POST    /rest/v4/targets                 controllers.api.v4.TargetController.byIds(ids: Seq[String] ?= Seq.empty)
GET     /rest/v4/targets                 controllers.api.v4.TargetController.byIds(ids: Seq[String] ?= Seq.empty)
GET     /rest/v4/targets/:id             controllers.api.v4.TargetController.byId(id: String)

POST    /rest/v4/drugs                 controllers.api.v4.DrugController.byIds(ids: Seq[String] ?= Seq.empty)
GET     /rest/v4/drugs                 controllers.api.v4.DrugController.byIds(ids: Seq[String] ?= Seq.empty)
GET     /rest/v4/drugs/:id             controllers.api.v4.DrugController.byId(id: String)

GET     /rest/v4/altsearch               controllers.api.v4.AltSearchController.altSearch(q: String)
GET     /rest/v4/search              controllers.api.v4.SearchController.search(q: String)

# health uri
GET     /_ah/health                     controllers.api.v4.MetaController.healthcheck

#  Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
